<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Co-work Office Finder - Direction</title>
    <link rel="stylesheet" href="styles/office.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">  
    <style>
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <!-- New Card for Current Location -->
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Current Location</h5><br>
                        <p id="currentLocation" class="card-text"><%= currentLocation; %></p>
                    </div>
                </div>
                <!-- Existing Card for Office Details -->
                <div class="card">
                    <div class="card-body">
                        <img id="officeImage" src="<%= image; %>" alt="Office">
                        <div class="content">
                            <h5 id="officeTitle" class="card-title"><%= title; %></h5>
                            <p id="officeAddress" class="card-text"><%= address; %></p>

                            <!-- Utilization Display -->
                            <div class="utilization">
                                <div class="utilization-bar" style="width: <%= ((currcap / maxcap) * 100).toFixed(2) %>%;"></div>
                            </div>
                            <div class="utilization-text">
                                <span><%= currcap %> / <%= maxcap %> occupied</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="row mb-3">
                    <div class="col">
                        <label for="departureDate">Departure Date:</label>
                        <input type="date" id="departureDate" class="form-control" value="">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="departureTime">Departure Time:</label>
                        <input type="time" id="departureTime" class="form-control" value="">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="modeOfTransport">Mode of Transport:</label>
                        <select id="modeOfTransport" class="form-control">
                            <option value="DRIVING">Driving</option>
                            <option value="BICYCLING">Cycling</option>
                            <option value="WALKING">Walking</option>
                            <option value="TRANSIT" selected="selected">Transit</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <button id="showDirectionBtn" class="btn btn-success">Refresh</button>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="row mb-3">
                    <div class="col">
                        <label for="Distance">Distance:</label>
                        <div class="card"><p id="distance" class="card-text">13.4 KM</p></div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="Duration">Duration:</label>
                        <div class="card"><p id="duration" class="card-text">47 mins</p></div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="EstimatedArrivalTime">Estimated Arrival Time:</label>
                        <div class="card"><p id="estimatedArrivalTime" class="card-text">23:28:57</p></div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Div for Google Map -->
        <div id="map"></div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= process.env.GOOGLE_MAPS_API_KEY; %>"></script>
    <script src="office.js"></script>
</body>
</html>